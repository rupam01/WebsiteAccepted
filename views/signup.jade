extends layout

var message = #{message}

block content
  //h2 #{title}
  //h3 #{message}

  .row
    .col-sm-6.col-sm-offset-3
      h1 Sign Up
      -var hasMessage = message.length > 0;
      if hasMessage
        .alert.alert-danger #{message}

      form(action='/signup', method='post')
        .form-group
          label Email
          input.form-control(type='text', name='email')
        .form-group
          label Password
          input.form-control(type='password', name='password')
        button.btn.btn-warning-btn-lg(type='submit') Signup
      hr
      p Already have an account? #[a(href='/login') Log In]
      p Or go? #[a(href='/') Home]
    br